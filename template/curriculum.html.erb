    <div class="jumbotron">
      <div class="container">
        <h1><%=h param[:name] %></h1>
        <p><%=h param[:datePublished] %>年発行, <%=h param[:startDate_str] %>施行</p>
        <p><small><span class="glyphicon glyphicon-link"></span> <a href="<%=h param[:uri] %>"><%=h param[:uri] %></a></small></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>教科一覧</h2>
          <ul>
            <%- param[:subjectArea].each do |area| -%>
              <li><a href="<%=h area[:uri].last_part %>"><%=h area[:name] %></a>
                <%- if area[:subjects].size > 0 -%>
                  <ul class="list-inline subjects">
                    <%- area[:subjects].each do |subject| -%>
                      <li><%=h subject.last_part %></li>
                    <%- end -%>
                  </ul>
                <%- end -%>
              </li>
            <%- end -%>
          </ul>
        </div>
      </div>
    </div>

    <hr>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>関連リンク</h2>
          <ul>
            <li><a href="<%=h param[:seeAlso] %>">学習指導要領（文部科学省サイト）</a></li>
          </ul>
        </div>
      </div>
    </div>
